<?php

/**
 * @file
 * Contains ZarizSnapshotTestCase
 */

class ZarizSnapshotTestCase extends DrupalWebTestCase {

  public static function getInfo() {
    return array(
      'name' => 'Snapshot',
      'description' => 'Test the Snapshot API.',
      'group' => 'Zariz',
    );
  }

  function setUp() {
    parent::setUp('zariz');
    $og_field = og_fields_info(OG_AUDIENCE_FIELD);
    $og_field['field']['cardinality'] = 1;
    og_create_field(OG_AUDIENCE_FIELD, 'node', 'article', $og_field);
  }

  /**
   * Test snapshot creation on a single branch.
   */
  function testCreateSnapshotOnBranchWithoutSnapshots() {
    $branch_node = zariz_create_branch('master');
    $branch_id = $branch_node->nid;

    // Add a group content.
    $values = array(
      'type' => 'article',
      'title' => $this->randomName(),
    );
    $values[OG_AUDIENCE_FIELD][LANGUAGE_NONE][0]['target_id'] = $branch_id;
    $node = $this->drupalCreateNode($values);

    // Get the snapshot that was created.
    $snapshot1 = zariz_get_snapshot_from_branch($branch_id);

    // Add another group content.
    $node = $this->drupalCreateNode($values);

    // Assert this is the same snapshot.
    $snapshot2 = zariz_get_snapshot_from_branch($branch_id);

    // Assert new references parent snapshot.
    $this->assertEqual($snapshot1->tid, $snapshot2->tid, 'Existing snapshot was used when added content.');
  }

}
